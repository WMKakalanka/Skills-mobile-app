<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid background color -->
    <solid android:color="#FFFFFF" /> <!-- White background -->

    <!-- Border around the EditText -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Light gray border -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" /> <!-- 8dp corner radius -->

    <!-- Padding inside the EditText -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />
</shape>
